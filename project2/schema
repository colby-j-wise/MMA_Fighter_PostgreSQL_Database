CREATE TABLE Fighter
(
	fid		INTEGER NOT NULL,
	fname		VARCHAR(255),
	lname		VARCHAR(255),
	dob		DATE,
	sex		CHAR(1),
	nationality	VARCHAR(255),
	weight		REAL,
	height		REAL,
	arm_reach	REAL,
	leg_reach	REAL,
	nickname	VARCHAR(255),
	PRIMARY KEY (fid)
);

CREATE TABLE Team
(
	tid		INTEGER NOT NULL,
	name		VARCHAR(255),
	PRIMARY KEY (tid)
);

CREATE TABLE TeamMember
(
	fid		INTEGER NOT NULL,
	tid		INTEGER NOT NULL,
	PRIMARY KEY (fid, tid),
	FOREIGN KEY (fid) REFERENCES Fighter(fid)
		ON DELETE CASCADE,
	FOREIGN KEY (tid) REFERENCES Team(tid)
		ON DELETE CASCADE
);

CREATE TABLE Weightclass
(
	wid		INTEGER NOT NULL,
	name		VARCHAR(255) NOT NULL,
	PRIMARY KEY (wid),
	UNIQUE (name)
);

CREATE TABLE Ranking
(
	fid		INTEGER NOT NULL,
	wid		INTEGER NOT NULL,
	rank		INTEGER,
	PRIMARY KEY (fid, wid),
	FOREIGN KEY (fid) REFERENCES Fighter(fid)
		ON DELETE CASCADE,
	FOREIGN KEY (wid) REFERENCES Weightclass(wid)
		ON DELETE CASCADE
);

CREATE TABLE Event
(
	eid		INTEGER NOT NULL,
	name		VARCHAR(255) NOT NULL,
	location	VARCHAR(255),
	date		DATE,
	PRIMARY KEY (eid),
	UNIQUE (name)
);

CREATE TABLE Match
(
	mid			INTEGER NOT NULL,
	eid			INTEGER NOT NULL,
	fid1			INTEGER NOT NULL,
	fid2			INTEGER NOT NULL,
	f1_result		VARCHAR(255),
	result_rnd		INTEGER,
	result_time		INTEGER,
	method			VARCHAR(255),
	prize_money		INTEGER ARRAY[2],
	match_recap		TEXT
	PRIMARY KEY (mid, eid),
	UNIQUE (eid, fid1, fid2),
	FOREIGN KEY (eid) REFERENCES Event(eid)
		ON DELETE CASCADE,
	FOREIGN KEY (fid1) REFERENCES Fighter(fid)
		ON DELETE CASCADE,
	FOREIGN KEY (fid2) REFERENCES Fighter(fid)
		ON DELETE CASCADE
);

CREATE TABLE Round
(
	eid		INTEGER NOT NULL,
	mid		INTEGER NOT NULL,
	round_num	INTEGER NOT NULL,
	f1_knockdowns	INTEGER,
	f1_strikes	INTEGER,
	f1_takedowns	INTEGER,
	f1_sub_att	INTEGER,
	f2_knockdowns	INTEGER,
	f2_strikes	INTEGER,
	f2_takedowns	INTEGER,
	f2_sub_att	INTEGER,
	PRIMARY KEY (eid, mid, round_num),
	FOREIGN KEY (mid, eid) REFERENCES Match(mid, eid)
		ON DELETE CASCADE
);


CREATE TYPE income_source AS (
	company		TEXT,
	description	TEXT,
	money		NUMERIC
);

CREATE TABLE endorsements (
	fid		INTEGER NOT NULL,
	income		income_source,
	PRIMARY KEY (fid, income),
	FOREIGN KEY (fid) REFERENCES Fighter(fid)
		ON DELETE CASCADE	
);



